<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res/com.example.easylove"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <com.example.easylove.view.ChangeColorIconWithTextView
            android:id="@+id/id_indicator_beckoning"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            zhy:icons="@drawable/ic_menu_start_conversation"
            zhy:text="@string/beckoning"
            zhy:text_size="12sp" />

        <com.example.easylove.view.ChangeColorIconWithTextView
            android:id="@+id/id_indicator_club"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            zhy:icons="@drawable/ic_menu_friendslist"
            zhy:text="@string/club"
            zhy:text_size="12sp" />
        
        <com.example.easylove.view.ChangeColorIconWithTextView
            android:id="@+id/id_indicator_mailbox"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            zhy:icons="@drawable/ic_menu_start_conversation"
            zhy:text="@string/mailbox"
            zhy:text_size="12sp" />

        <com.example.easylove.view.ChangeColorIconWithTextView
            android:id="@+id/id_indicator_my"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:padding="5dp"
            zhy:icons="@drawable/ic_menu_friendslist"
            zhy:text="@string/my"
            zhy:text_size="12sp" />
        
        
    </LinearLayout>

</LinearLayout>